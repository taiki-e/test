RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
        binfmt-support \
        ca-certificates \
        curl \
        file \
        g++ \
        g++-arm-linux-gnueabi \
        libc6-dev \
        libc6-dev-armel-cross \
        make \
    && rm -rf /var/lib/apt/lists/*

