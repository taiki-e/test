FROM ubuntu:20.04

RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
        binfmt-support \
        ca-certificates \
        curl \
        file \
        g++ \
        g++-mips-linux-gnu \
        libc6-dev \
        libc6-dev-mips-cross \
        make \
    && rm -rf /var/lib/apt/lists/*

COPY qemu.sh /
RUN /qemu.sh mips

