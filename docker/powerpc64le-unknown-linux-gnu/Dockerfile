FROM ubuntu:20.04

RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
        ca-certificates \
        curl \
        file \
        g++ \
        g++-powerpc64le-linux-gnu \
        libc6-dev \
        libc6-dev-ppc64el-cross \
        make \
    && rm -rf /var/lib/apt/lists/*

COPY qemu.sh /
RUN /qemu.sh ppc64le

ENV CARGO_TARGET_POWERPC64LE_UNKNOWN_LINUX_GNU_LINKER=powerpc64le-linux-gnu-gcc
ENV CARGO_TARGET_POWERPC64LE_UNKNOWN_LINUX_GNU_RUNNER="qemu-ppc64le -cpu power9 -L /usr/powerpc64le-linux-gnu"
ENV CC_powerpc64le_unknown_linux_gnu=powerpc64le-linux-gnu-gcc
ENV CXX_powerpc64le_unknown_linux_gnu=powerpc64le-linux-gnu-g++
ENV OBJDUMP=powerpc64le-linux-gnu-objdump
