{
  "build": {
    "dockerfile": "Dockerfile",
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt=seccomp=unconfined",
  ],
  "settings": {
    "files.watcherExclude": {
      "**/target/**": true,
      "**/tmp/**": true,
    },
  },
  "extensions": [
    "editorconfig.editorconfig",
    "rust-lang.rust-analyzer",
    "serayuzgur.crates",
    "streetsidesoftware.code-spell-checker",
    "tamasfe.even-better-toml",
    "vadimcn.vscode-lldb",
  ],
}
